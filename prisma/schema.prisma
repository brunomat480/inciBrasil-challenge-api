generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  phone      String     @unique
  password   String
  created_at DateTime   @default(now())
  platform   Platform[]
  Tool       Tool[]

  @@map("users")
}

model Platform {
  id         String   @id @default(uuid())
  name       String
  imageUrl   String
  url        String
  created_at DateTime @default(now())
  userId     String   @map("user_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("platforms")
}

model Tool {
  id         String   @id @default(uuid())
  name       String
  imageUrl   String
  url        String
  created_at DateTime @default(now())
  userId     String   @map("user_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("=tools")
}
