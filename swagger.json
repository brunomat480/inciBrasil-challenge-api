{
  "openapi": "3.0.0",
  "info": {
    "title": "API de plataforma de cursos",
    "description": "API que permite que usuários acessem plataformas de cursos voltadas para educação e ferramentas.",
    "contact": {
      "name": "Repositório",
      "url": "https://github.com/brunomat480/inciBrasil-challenge-api"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Platforms"
    },
    {
      "name": "Tools"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Criação de um usuário",
        "requestBody": {
          "description": "Dados necessários para cradastrar um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cadastro realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUser"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar cadastro"
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Usuários cadastrados",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ResponseUser"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Busca de um usuário por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUser"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Atenticar usuário para que tenha acesso aos recursos da aplicação",
        "requestBody": {
          "description": "Dados necessários para autenticar um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestSessions"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário autenticado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseSessions"
                }
              }
            }
          },
          "400": {
            "description": "Usuário não autorizado"
          }
        }
      }
    },
    "/users/{userId}/platforms": {
      "get": {
        "tags": [
          "Platforms"
        ],
        "description": "Busca plataformas na qual o usuário tem acesso",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsePlatform"
                }
              }
            }
          },
          "401": {
            "description": "Não possui acesso essa plataforma"
          }
        }
      },
      "post": {
        "tags": [
          "Platforms"
        ],
        "description": "Adicionar plataforma em uma conta do usuário",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "requestBody": {
          "description": "Dados necessários para adicionar uma plataforma",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestPlatform"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Plataforma adicionada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseUser"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao adicionar plataforma"
          }
        }
      }
    },
    "/users/{userId}/tools": {
      "get": {
        "tags": [
          "Tools"
        ],
        "description": "Busca ferramentas na qual o usuário tem acesso",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseTool"
                }
              }
            }
          },
          "401": {
            "description": "Não possui acesso essa ferramenta"
          }
        }
      },
      "post": {
        "tags": [
          "Tools"
        ],
        "description": "Adicionar ferramenta em uma conta do usuário",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "requestBody": {
          "description": "Dados necessários para adicionar uma ferramenta",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestTool"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Plataforma adicionada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseTool"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao adicionar plataforma"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do usuário",
            "example": "Bruno"
          },
          "email": {
            "type": "string",
            "description": "E-mail do usuário",
            "example": "bruno@gmail.com"
          },
          "phone": {
            "type": "string",
            "description": "Telefone do usuário",
            "example": "11111111111"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário",
            "example": "123456"
          }
        },
        "required": [
          "name",
          "email",
          "phone",
          "password"
        ]
      },
      "ResponseUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id do usuário",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "Nome do usuário",
            "example": "Bruno"
          },
          "email": {
            "type": "string",
            "description": "E-mail do usuário",
            "example": "bruno@gmail.com"
          },
          "phone": {
            "type": "string",
            "description": "Telefone do usuário",
            "example": "11111111111"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário",
            "example": "123456"
          }
        }
      },
      "RequestSessions": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "description": "E-mail ou telefone para o usuário se autenticar",
            "example": "bruno@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário",
            "example": "123456"
          }
        }
      },
      "ResponseSessions": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "description": "Infomarções do usuário",
            "properties": {
              "name": {
                "type": "string",
                "description": "Nome do usuário",
                "example": "Bruno"
              },
              "email": {
                "type": "string",
                "description": "E-mail do usuário",
                "example": "bruno@gmail.com"
              },
              "phone": {
                "type": "string",
                "description": "Telefone do usuário",
                "example": "99999999999"
              }
            }
          },
          "token": {
            "type": "string",
            "description": "Token do usuário",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "RequestPlatform": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da plataforma",
            "example": "Edooker"
          },
          "imageUrl": {
            "type": "string",
            "description": "Logo da plataforma",
            "example": "/courses/edooker-logo.svg"
          },
          "url": {
            "type": "string",
            "description": "Link da plataforma",
            "example": "https://edooker.com.br/"
          }
        },
        "required": [
          "name",
          "imageUrl",
          "url"
        ]
      },
      "ResponsePlatform": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id da plataforma",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "Nome da plataforma",
            "example": "Edooker"
          },
          "imageUrl": {
            "type": "string",
            "description": "Logo da plataforma",
            "example": "/courses/edooker-logo.svg"
          },
          "url": {
            "type": "string",
            "description": "Link da plataforma",
            "example": "https://edooker.com.br/"
          }
        }
      },
      "RequestTool": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da ferramenta",
            "example": "Gmail"
          },
          "imageUrl": {
            "type": "string",
            "description": "Logo da ferramenta",
            "example": "/tools/gmail-logo.svg"
          },
          "url": {
            "type": "string",
            "description": "Link da ferramenta",
            "example": "https://gmail.com/"
          }
        },
        "required": [
          "name",
          "imageUrl",
          "url"
        ]
      },
      "ResponseTool": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da ferramenta",
            "example": "Gmail"
          },
          "imageUrl": {
            "type": "string",
            "description": "Logo da ferramenta",
            "example": "/tools/gmail-logo.svg"
          },
          "url": {
            "type": "string",
            "description": "Link da ferramenta",
            "example": "https://gmail.com/"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação utilizando JWT",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}